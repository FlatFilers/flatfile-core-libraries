{
  "name": "@flatfile/configure",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlatFilers/platform-sdk-mono.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FlatFilers/platform-sdk-mono/issues"
  },
  "homepage": "https://github.com/FlatFilers/platform-sdk-mono#readme",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup index.ts --format esm,cjs --dts --external react",
    "dev": "tsup index.ts --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest --runInBand --detectOpenHandles --forceExit"
  },
  "devDependencies": {
    "@flatfile/ts-config-platform-sdk": "*",
    "@types/jest": "^28.1.4",
    "eslint": "^8.19.0",
    "jest": "^28.1.2",
    "ts-jest": "^28.0.5",
    "tsup": "^6.1.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverage": false,
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "<rootdir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ]
  },
  "ts-jest": {
    "isolatedModules": false
  },
  "dependencies": {
    "case-anything": "^2.1.10",
    "@flatfile/orm": "*",
    "@flatfile/platform-sdk": "*"
  }
}
