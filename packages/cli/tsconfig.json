{
    "extends": "@flatfile/ts-config-platform-sdk/base.json",
    "include": [
        "./src"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ],
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "types": ["bun-types"]
    }
}