{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "roots": ["<rootDir>", "<rootDir>/../src"],
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@flatfile/api/(.*)$": "<rootDir>/../src/$1"
  },
  "testRegex": ".int-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest-env-init.ts"]
}
