{
  "name": "@flatfile/orm",
  "version": "0.0.0",
  "description": "",
  "main": "./dist/index.js",
  "tsup": {
    "entry": ["src/index.ts"],
    "splitting": false,
    "dts": true,
    "sourcemap": true,
    "clean": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlatFilers/platform-sdk-mono.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FlatFilers/platform-sdk-mono/issues"
  },
  "homepage": "https://github.com/FlatFilers/platform-sdk-mono#readme",
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest --runInBand --detectOpenHandles --forceExit"
  },
  "devDependencies": {
    "@flatfile/ts-config-platform-sdk": "*"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverage": false,
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "<rootdir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ]
  },
  "ts-jest": {
    "isolatedModules": false
  }
}
