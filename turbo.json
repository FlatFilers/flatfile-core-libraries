{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "packages#build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "apps#build": {
            "dependsOn": ["^build", "packages#build"],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**",
                ".flatfile/**"
            ]
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
